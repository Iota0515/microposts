<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :profile %>
      <%= f.text_field :profile %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.submit "Edit my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>